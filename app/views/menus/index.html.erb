<h1>꼬우면 한 마디씩 ㄱㄱ~</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <td><%= menu.title %></td>
        <td><%= menu.content %></td>
        <td><%= link_to '보기', menu %></td>
        <td><%= link_to '편집', edit_menu_path(menu) %></td>
        <td><%= link_to '삭제', menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

